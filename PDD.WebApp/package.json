{
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "node ./Scripts/postinstall.js && dotnet tool restore",
    "dotnet-watch": "dotnet watch",
    "dotnet-run": "dotnet run",
    "dotnet-clean": "dotnet clean",
    "dotnet-build": "dotnet build",
    "dotnet-audit": "dotnet list package --vulnerable --include-transitive",
    "dotnet-test": "cd ../PDD.DatabaseTests/ && dotnet test",
    "fe-scss-build": "sass ./App/scss/style-dark.scss ./wwwroot/style-dark.css --no-source-map --style compressed && sass ./App/scss/style-light.scss ./wwwroot/style-light.css --no-source-map --style compressed",
    "fe-scss-dark-watch": "sass ./App/scss/style-dark.scss ./wwwroot/style-dark.css -w --style compressed",
    "fe-scss-light-watch": "sass ./App/scss/style-light.scss ./wwwroot/style-light.css -w --style compressed",
    "fe-index-build": "rollup -c ./Pages/Index.rollup.config.js",
    "fe-index-watch": "rollup -c ./Pages/Index.rollup.config.js -w",
    "fe-build-all": "node ./Scripts/build-all.js",
    "fe-watch-all": "node ./Scripts/watch-all.js",
    "npm-upgrade": "ncu --upgrade && npm install && npm audit fix",
    "npm-audit-fix": "npm audit fix",
    "code": "code .",
    "psql": "dotnet tool run pgroutiner -psql",
    "pg-all": "cd ../PDD.Database/ && dotnet tool run pgroutiner -db -sd -md -r -ut",
    "pg-extensions": "cd ../PDD.Database/ && dotnet tool run pgroutiner -r -ut",
    "pg-schema": "cd ../PDD.Database/ && dotnet tool run pgroutiner -db -sd",
    "pg-data": "cd ../PDD.Database/ && dotnet tool run pgroutiner -dd",
    "pg-readme": "cd ../PDD.Database/ && dotnet tool run pgroutiner -md",
    "pg-readme-commit": "cd ../PDD.Database/ && dotnet tool run pgroutiner --commit-md",
    "pg-tests-crud": "cd ../PDD.DatabaseTests/ && dotnet tool run pgroutiner --crud"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/bootstrap": "^5.2.4",
    "bootstrap": "5.2.1",
    "bootstrap-icons": "^1.9.1",
    "chart.js": "^3.9.1",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.55.0",
    "svelte": "^3.50.1",
    "svelte-check": "^2.9.0",
    "svelte-preprocess": "^4.10.7",
    "svelte-spa-router": "^3.3.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "npm-check-updates": "^16.3.2"
  }
}
